<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_alignParentTop="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:descendantFocusability="blocksDescendants">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/profile_bg_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_180sdp" >
                        <com.itsronald.widget.ViewPagerIndicator
                            android:id="@+id/indicator_view_pager_suggested_services"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="@dimen/_16sdp"
                            android:gravity="center_vertical" />

                    </android.support.v4.view.ViewPager>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/back_viewpage_overlay" />

                    <LinearLayout
                        android:id="@+id/view_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/view_online"
                        android:layout_alignParentBottom="true">

                        <TextView
                            android:id="@+id/txt_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:text=" "
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_big" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view_online"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/green_ellipse" />

                        <TextView
                            android:id="@+id/online"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="@dimen/_10sdp"
                            android:gravity="center_vertical"
                            android:text="Online"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_size_tiny" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/camera_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_140sdp"
                        android:background="@color/transparent"
                        android:src="@drawable/icon_user_camera" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/move_to_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:id="@+id/rl_txt_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/_5sdp">

                                    <ImageView
                                        android:layout_width="@dimen/_24sdp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@drawable/dark_business" />

                                    <TextView
                                        android:id="@+id/txt_company"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:text="ABC Company"
                                        android:textColor="@color/text_color_dark" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/_5sdp">

                                    <ImageView
                                        android:layout_width="@dimen/_24sdp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@drawable/icon_dark_home" />

                                    <TextView
                                        android:id="@+id/txt_location"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:text="Street 123, Chicago IL"
                                        android:textColor="@color/text_color_dark" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/_5sdp">

                                    <ImageView
                                        android:layout_width="@dimen/_24sdp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@drawable/icon_dark_call_small" />

                                    <TextView
                                        android:id="@+id/txt_phone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:text="415 3 567 885"
                                        android:textColor="@color/text_color_dark" />
                                </LinearLayout>


                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true">

                                <ImageButton
                                    android:id="@+id/img_call"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_8sdp"
                                    android:layout_marginRight="@dimen/_8sdp"
                                    android:background="@color/transparent"
                                    android:src="@drawable/icon_phone_background" />

                                <ImageView
                                    android:id="@+id/img_chat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@+id/img_call"
                                    android:layout_toRightOf="@+id/img_call"
                                    android:background="@color/transparent"
                                    android:src="@drawable/icon_chat_background" />
                            </RelativeLayout>

                            <Button
                                android:id="@+id/btn_follow_edit_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:background="@color/transparent"
                                android:text="Follow"
                                android:textColor="@color/colorAccent" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/line1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/fix_0.5dp"
                            android:background="@drawable/divider_option" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/line1"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                            <TextView
                                android:id="@+id/txt_descrption"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Our brands and products are of genuine quality and the services that we provide are a premium touch including premiu" />
                        </LinearLayout>

                        <View
                            android:id="@+id/line2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/divider_option" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/dark_pointters_gray" />

                                <TextView
                                    android:id="@+id/mPointsValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:text="4k Points"
                                    android:textSize="@dimen/text_size_mini_tiny" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.like.LikeButton
                                    app:icon_type="heart"
                                    app:icon_size="@dimen/_12sdp"
                                    android:id="@+id/like_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_20sdp"/>


                                <TextView
                                    android:id="@+id/mLikesNum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:text="4k Likes"
                                    android:textSize="@dimen/text_size_mini_tiny" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_watching_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/icon_watching_white" />

                                <TextView
                                    android:id="@+id/mWatchingValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:text="4k Watching"
                                    android:textSize="@dimen/text_size_mini_tiny" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_5sdp"
                            android:background="@drawable/shadow" />


                    </LinearLayout>

                    <TextView
                        fontPath="fonts/Montserrat-Medium.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:includeFontPadding="false"
                        android:text="Service Metrics"
                        android:textColor="#000001"
                        android:textSize="@dimen/text_size_medium"
                        tools:ignore="MissingPrefix" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/bg_service"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/_12sdp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1">

                                    <TextView
                                        android:id="@+id/mOneTimeValue"
                                        fontPath="fonts/Montserrat-Light.ttf"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:text="0%"
                                        android:textColor="#000001"
                                        android:textSize="@dimen/text_size_small"
                                        tools:ignore="MissingPrefix" />

                                    <TextView
                                        fontPath="fonts/Montserrat-Regular.ttf"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/mOneTimeValue"
                                        android:layout_centerHorizontal="true"
                                        android:gravity="center"
                                        android:text="On time"
                                        android:textColor="#656566"
                                        android:textSize="@dimen/text_size_tiny"
                                        tools:ignore="MissingPrefix" />
                                </RelativeLayout>

                                <View
                                    android:layout_width="0.7dp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_gravity="center"
                                    android:background="#153" />

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1">

                                    <TextView
                                        android:id="@+id/mQualityNum"
                                        fontPath="fonts/Montserrat-Light.ttf"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:text="0/5"
                                        android:textColor="#000001"
                                        android:textSize="@dimen/text_size_small"
                                        tools:ignore="MissingPrefix" />

                                    <TextView
                                        fontPath="fonts/Montserrat-Regular.ttf"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/mQualityNum"
                                        android:layout_centerHorizontal="true"
                                        android:gravity="center"
                                        android:text="Quality"
                                        android:textColor="#656566"
                                        android:textSize="@dimen/text_size_tiny"
                                        tools:ignore="MissingPrefix" />
                                </RelativeLayout>

                                <View
                                    android:layout_width="0.7dp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_gravity="center"
                                    android:background="#153" />

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <TextView
                                        android:id="@+id/mHour"
                                        fontPath="fonts/Montserrat-Light.ttf"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:text="0 hr"
                                        android:textColor="#000001"
                                        android:textSize="@dimen/text_size_small"
                                        tools:ignore="MissingPrefix" />

                                    <TextView
                                        fontPath="fonts/Montserrat-Regular.ttf"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/mHour"
                                        android:layout_centerHorizontal="true"
                                        android:gravity="center"
                                        android:text="@string/response"
                                        android:textColor="#656566"
                                        android:textSize="@dimen/text_size_tiny"
                                        tools:ignore="MissingPrefix" />
                                </RelativeLayout>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/fix_0.5dp"
                                android:src="@drawable/divider_option" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1">

                                </RelativeLayout>


                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1">

                                </RelativeLayout>


                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                </RelativeLayout>
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp">

                                <ImageView
                                    android:id="@+id/textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/dark_business" />

                                <TextView
                                    android:id="@+id/txt_order_num"
                                    fontPath="fonts/Montserrat-Light.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_toRightOf="@id/textView"
                                    android:text="0 service order completed"
                                    android:textColor="#656566"
                                    android:textSize="@dimen/text_size_tiny"
                                    tools:ignore="MissingPrefix" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_3sdp">

                                <ImageView
                                    android:id="@+id/mAvgRating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:src="@drawable/dark_star" />

                                <TextView
                                    android:id="@+id/txt_rating_num"
                                    fontPath="fonts/Montserrat-Light.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_toRightOf="@id/mAvgRating"
                                    android:text="0% avg rating"
                                    android:textColor="#656566"
                                    android:textSize="@dimen/text_size_tiny"
                                    tools:ignore="MissingPrefix" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_3sdp">

                                <ImageView
                                    android:id="@+id/mVline"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:src="@drawable/dark_customer" />

                                <TextView
                                    android:id="@+id/txt_customers_num"
                                    fontPath="fonts/Montserrat-Light.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_toRightOf="@id/mVline"
                                    android:gravity="center"
                                    android:text="0% of customers will buy this service again"
                                    android:textColor="#656566"
                                    android:textSize="@dimen/text_size_tiny"
                                    tools:ignore="MissingPrefix" />

                            </RelativeLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>


                    <Button
                        android:id="@+id/btn_get_custom_offer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:background="@color/transparent"
                        android:text="Get Custom Offers"
                        android:textColor="@color/colorAccent" />


                </LinearLayout>

                <TextView
                    fontPath="fonts/Montserrat-Medium.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:includeFontPadding="false"
                    android:text="Services"
                    android:textColor="#000001"
                    android:textSize="@dimen/text_size_medium"
                    tools:ignore="MissingPrefix" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar_shadow"/>

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:src="@drawable/icon_back_white"
            android:background="@color/transparent"
            />

        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:src="@drawable/icon_share_white"
            android:background="@color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

</RelativeLayout>
