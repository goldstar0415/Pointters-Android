<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout_search_results"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_20sdp"
        app:elevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_search_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStart="0dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_icon_grey"
                    app:layout_constraintBottom_toBottomOf="@+id/edt_search_here"
                    app:layout_constraintTop_toTopOf="@+id/edt_search_here" />

                <EditText
                    android:id="@+id/edt_search_here"
                    android:layout_width="0dp"
                    android:focusable="false"
                    android:enabled="false"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/bg_search"
                    android:hint="@string/search_here"
                    android:inputType="textCapWords"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_7sdp"
                    android:paddingLeft="@dimen/_35sdp"
                    android:paddingTop="@dimen/_7sdp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintLeft_toRightOf="@+id/btn_back"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- <ImageView
                     android:id="@+id/img_cross_search_here"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginEnd="@dimen/_5sdp"
                     android:layout_marginRight="@dimen/_5sdp"
                     android:padding="@dimen/fix_3dp"
                     android:src="@drawable/time_icon"
                     android:visibility="gone"
                     app:layout_constraintBottom_toBottomOf="@+id/edt_search_here"
                     app:layout_constraintRight_toRightOf="@+id/edt_search_here"
                     app:layout_constraintTop_toTopOf="@+id/edt_search_here" />-->

                <ImageView
                    android:id="@+id/img_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:src="@drawable/bg_search_selector"
                    app:layout_constraintBottom_toBottomOf="@+id/edt_search_here"
                    app:layout_constraintLeft_toLeftOf="@+id/edt_search_here"
                    app:layout_constraintTop_toTopOf="@+id/edt_search_here" />

                <TextView
                    android:id="@+id/btn_get_live_offers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_intro_signup_ripple"
                    android:paddingBottom="@dimen/_7sdp"
                    android:paddingLeft="@dimen/_22sdp"
                    android:paddingRight="@dimen/_22sdp"
                    android:paddingTop="@dimen/_7sdp"
                    android:text="@string/get_live_offer"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintLeft_toLeftOf="@id/edt_search_here"
                    app:layout_constraintTop_toBottomOf="@id/edt_search_here" />

                <ImageView
                    android:id="@+id/img_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/more_icon"
                    app:layout_constraintBottom_toBottomOf="@id/btn_get_live_offers"
                    app:layout_constraintRight_toRightOf="@id/edt_search_here"
                    app:layout_constraintTop_toTopOf="@id/btn_get_live_offers" />


                <ImageView
                    android:id="@+id/img_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/map_icon"
                    app:layout_constraintBottom_toBottomOf="@id/btn_get_live_offers"
                    app:layout_constraintRight_toLeftOf="@id/img_more"
                    app:layout_constraintTop_toTopOf="@id/btn_get_live_offers" />

                <ImageView
                    android:id="@+id/img_filter_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/filter_icon"
                    app:layout_constraintBottom_toBottomOf="@id/btn_get_live_offers"
                    app:layout_constraintRight_toLeftOf="@id/img_map"
                    app:layout_constraintTop_toTopOf="@id/btn_get_live_offers" />


            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_services_result"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout_search_results" />

</android.support.constraint.ConstraintLayout>