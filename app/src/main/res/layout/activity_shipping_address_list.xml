<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a shipping address"
        android:layout_margin="@dimen/_10sdp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/fix_0.5dp"
        android:background="@drawable/divider_option"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_shipping_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/btn_new_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_new_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD NEW ADDRESS"
            android:textColor="@color/colorAccent"
            android:background="@color/transparent"
            android:gravity="center"
            android:padding="@dimen/_10sdp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/right_arrow_icon"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/fix_0.5dp"
            android:src="@drawable/divider_option"
            android:layout_alignBottom="@+id/txt_new_address"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/btn_edt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_edt_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT SHIPPING ADDRESSES"
            android:textColor="@color/colorAccent"
            android:background="@color/transparent"
            android:gravity="center"
            android:padding="@dimen/_10sdp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/right_arrow_icon"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3sdp"
            android:src="@drawable/shadow"
            android:layout_alignBottom="@+id/txt_edt_address"/>
    </RelativeLayout>

</LinearLayout>