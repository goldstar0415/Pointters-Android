<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@drawable/bg_service"
        android:paddingTop="@dimen/_15sdp">

        <RelativeLayout
            android:id="@+id/upper_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/img_service_provider"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/service_thumb_big" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/img_service_provider"
                android:layout_alignTop="@+id/img_service_provider"
                android:layout_toRightOf="@+id/img_service_provider"
                android:paddingLeft="@dimen/_8sdp">

                <TextView
                    android:id="@+id/txt_service_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/txt_service_type"
                    android:includeFontPadding="false"
                    android:maxLines="2"
                    android:text="IT service lorem ipsum dummy text"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_small" />

                <ImageView
                    android:id="@+id/txt_service_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/right_arrow" />

                <RelativeLayout
                    android:id="@+id/txt_price_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/paid_of"
                    android:layout_below="@+id/txt_service_name"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/txt_service_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="$50"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_tiny" />

                    <TextView
                        android:id="@+id/txt_service_actual_price"
                        fontPath="fonts/Montserrat-Light.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/txt_service_price"
                        android:text="$100"
                        android:textColor="@color/color_service_actual_price"
                        android:textSize="@dimen/text_size_tiny"
                        tools:ignore="MissingPrefix" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignLeft="@+id/txt_service_actual_price"
                        android:layout_alignRight="@+id/txt_service_actual_price"
                        android:layout_centerVertical="true"
                        android:background="@color/color_service_actual_price" />


                    <TextView
                        android:id="@+id/txt_price_desc"
                        fontPath="fonts/Montserrat-Light.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/txt_service_actual_price"
                        android:text="For 2 hr"
                        android:textColor="@color/color_service_actual_price"
                        android:textSize="@dimen/text_size_tiny"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/txt_service_provider_name"
                        fontPath="fonts/Montserrat-Light.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:maxWidth="@dimen/_60sdp"

                        android:text="Jhons"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_tiny"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        fontPath="fonts/Montserrat-Light.ttf"
                        tools:ignore="MissingPrefix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/txt_service_provider_name"
                        android:text="@string/by"

                        android:textColor="#666666"
                        android:textSize="@dimen/text_size_tiny" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/paid_of"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:id="@+id/txt_paidof"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="Paid of 5/9"
                        android:textColor="#666666"
                        android:textSize="@dimen/text_size_mini_tiny" />

                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/divider_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fix_1dp"
            android:layout_below="@+id/upper_view"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/bg_light_gray_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider_view"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingRight="@dimen/_8sdp"
            android:paddingTop="@dimen/_5sdp">

            <TextView
                android:id="@+id/txt_payment_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="@string/pending_delivery"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_tiny" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/call_icon_small" />

                <ImageView
                    android:id="@+id/btn_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/chat_icon_small" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/btn_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/notification_icon_small" />
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/imv_notification_alarm"
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_8sdp"
                        android:layout_alignTop="@id/btn_notification"
                        android:layout_alignRight="@id/btn_notification"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:scaleType="centerCrop"
                        android:src="@color/color_orange"
                        app:riv_mutate_background="true"
                        app:riv_oval="true"
                        app:riv_tile_mode="clamp" />
                    <TextView
                        android:id="@+id/txt_notification_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/imv_notification_alarm"
                        android:layout_alignRight="@id/imv_notification_alarm"
                        android:layout_alignTop="@id/imv_notification_alarm"
                        android:layout_alignBottom="@id/imv_notification_alarm"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="6sp"/>
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>