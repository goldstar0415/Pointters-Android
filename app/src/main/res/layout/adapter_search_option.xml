<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/_18sdp"
    android:paddingBottom="@dimen/_12sdp"
    android:paddingTop="@dimen/_12sdp">

    <ImageView
        android:id="@+id/view_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/txt_option"
        app:layout_constraintBottom_toBottomOf="@+id/txt_option"
        android:src="@drawable/icons_photographer"/>

    <TextView
        android:id="@+id/txt_option"
        android:layout_width="0dp"
        android:textSize="@dimen/text_size_tiny"
        android:textColor="#34343C"
        android:text="Photographer"
        app:layout_constraintLeft_toRightOf="@id/view_indicator"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_20sdp" />

</android.support.constraint.ConstraintLayout>