<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager_suggested_services"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/slider_gradient"
                />

            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/indicator_view_pager_suggested_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_13sdp"
                android:paddingBottom="@dimen/fix_1dp"
                android:paddingTop="@dimen/fix_1dp"
                android:layout_alignParentBottom="true"
                app:theme="@style/CustomCirclePageIndicatorSuggestedServices" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_section2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_pager_suggested_services">

            <TextView
                fontPath="fonts/Montserrat-Light.ttf"
                tools:ignore="MissingPrefix"
                android:id="@+id/txt_section2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/categories"
                android:textColor="@color/text_color_dark_gray"
                android:textSize="@dimen/text_size_medium"
                android:includeFontPadding="false"
                android:layout_marginLeft="@dimen/_10sdp"
                />

            <Button
                android:id="@+id/see_all_section2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:text="@string/see_all"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_medium"
                android:layout_alignParentRight="true" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_section2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_below="@+id/txt_section2_title"
                android:paddingStart="@dimen/_10sdp"
                tools:ignore="RtlSymmetry"
                android:paddingLeft="@dimen/_10sdp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_section3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
