<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/bg_service">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <RelativeLayout
                    android:id="@+id/rl_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rv_comments"
                    android:background="#FCFCFC"
                    android:layout_marginTop="@dimen/_35sdp">

                    <EditText
                        android:id="@+id/mCommentCurrentScreen"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/btn_send"
                        android:background="@android:color/transparent"
                        android:hint="Write Comment"
                        android:maxLines="1"
                        android:inputType="textCapSentences"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:textColor="@android:color/black"
                        android:textColorHint="#A0AEC1"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/btn_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/curve_btn_bg"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_15sdp"
                        android:text="@string/send"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_small" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp"
                android:layout_below="@+id/rl_top"
                android:background="@android:color/transparent"></RelativeLayout>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>