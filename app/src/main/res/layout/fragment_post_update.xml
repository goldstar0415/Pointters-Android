<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.pointters.utils.CustomTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:textAlignment="center"
        app:tabBackground="@android:color/white"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabIndicatorHeight="@dimen/fix_3dp"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#1D1D28"
        app:tabTextAppearance="@style/customTabFontsStyle"
        app:tabTextColor="#1D1D28" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_post"
        android:layout_below="@id/tab_layout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/layout_choose_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_upload_options"
                        fontPath="fonts/Montserrat-Medium.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/coose_img_text_without_profile"
                        android:textColor="#7A7A7A"
                        android:textSize="@dimen/text_size_small"
                        tools:ignore="MissingPrefix" />

                    <ImageView
                        android:id="@+id/img_choose_bg_images"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_upload_options"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:src="@drawable/add_hero_img_video_icon" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_camera"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:elevation="1dp"
                    android:visibility="gone">

                    <com.flurgle.camerakit.CameraView
                        android:id="@+id/camera_preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true" />

                    <ImageView
                        android:id="@+id/take_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:src="@drawable/capture_button" />

                    <!--   <ProgressBar
                           android:id="@+id/progress_bar"
                           android:layout_width="@dimen/_23sdp"
                           android:layout_height="@dimen/_23sdp"
                           android:layout_alignParentBottom="true"
                           android:layout_centerHorizontal="true"
                           android:layout_marginBottom="@dimen/_8sdp" />
   -->
                    <TextView
                        android:id="@+id/txt_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:text="10 Secs"
                        android:textColor="@android:color/white" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_crosswall"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_175sdp"
                    android:gravity="center"
                    android:visibility="gone">

                    <me.crosswall.lib.coverflow.core.PagerContainer
                        android:id="@+id/pager_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.v4.view.ViewPager
                            android:id="@+id/container_viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:layout_marginRight="@dimen/_25sdp">                            >

                        </android.support.v4.view.ViewPager>

                    </me.crosswall.lib.coverflow.core.PagerContainer>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_choose_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_crosswall"
                    android:layout_gravity="left"
                    android:layout_marginTop="-8dp"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_tag_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:ellipsize="end"
                        android:maxLength="30"
                        android:text="@string/tag_a_service_or_seller"
                        android:textColor="#3A3A3A"
                        android:textSize="@dimen/text_size_medium" />

                    <ImageView
                        android:id="@+id/img_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/txt_tag_service"
                        android:src="@drawable/right_arrow" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_post_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/bg_service"
                android:paddingBottom="@dimen/_15sdp"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/img_tag_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp">
                    <ImageView
                        android:id="@+id/post_tag_profile_rect"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/photo_placeholder"
                        android:visibility="gone"/>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/post_tag_profile_round"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/user_avatar_placeholder"
                        app:riv_mutate_background="true"
                        app:riv_oval="true"
                        app:riv_tile_mode="clamp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_toRightOf="@id/img_tag_layout">

                    <TextView
                        fontPath="fonts/Montserrat-Regular.ttf"
                        android:id="@+id/post_tag_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Milam Tora"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_size_small"
                        tools:ignore="MissingPrefix" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_centerVertical="true"
                        android:layout_below="@id/post_tag_name">

                        <ImageView
                            android:id="@+id/post_tag_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/location_icon_grey"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"/>

                        <TextView
                            fontPath="fonts/Montserrat-Regular.ttf"
                            tools:ignore="MissingPrefix"
                            android:id="@+id/txt_tag_location"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/post_tag_location"
                            android:text="NA"
                            android:textColor="#7F7F7F"
                            android:maxLines="1"
                            android:textSize="@dimen/text_size_tiny" />

                    </RelativeLayout>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/post_tag_close"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:padding="5dp"
                    android:src="@drawable/cross_icon_blue" />

            </RelativeLayout>


             <RelativeLayout
                android:id="@+id/layout_post_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@drawable/bg_service">

                <TextView
                    android:id="@+id/txt_post_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_17sdp"
                    android:text="@string/message"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_small" />

                <EditText
                    android:id="@+id/edittext_post_messagge"
                    fontPath="assets/Montserrat-Light.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_below="@+id/txt_post_message"
                    android:layout_marginBottom="@dimen/_17sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_17sdp"
                    android:background="@drawable/bg_light_gray_border"
                    android:gravity="top"
                    android:hint="@string/write_here"
                    android:inputType="textCapSentences|textMultiLine"
                    android:overScrollMode="always"
                    android:padding="@dimen/_5sdp"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:textColor="@color/text_color_dark_gray"
                    android:textSize="@dimen/text_size_small"
                    tools:ignore="MissingPrefix" />

            </RelativeLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@id/btn_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:background="@drawable/btn_seletor_rounded"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="@string/post"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_small"
        android:enabled="false"/>


</RelativeLayout>