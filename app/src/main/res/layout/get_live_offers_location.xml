<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#f1efef"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/search"
        android:background="#FFF">
        <ImageView
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="      Chicago"
            android:drawableTint="#b5b5b6"
            android:layout_marginRight="5dp"
            android:background="#ececec"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/location"
            android:padding="10dp"
            android:layout_toRightOf="@+id/back"
            android:drawableRight="@drawable/ic_cancel_black_24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="#2b2b2b"/>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="7dp"
        android:layout_below="@+id/search"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="7dp"
        card_view:cardCornerRadius="3dp">

        <RelativeLayout
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF">

            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"/>


            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"

                android:layout_below="@+id/heading">


            <TextView
                android:id="@+id/notontime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chicago (current location)"
                android:textSize="17dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/c1"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:id="@+id/c1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#50d2c2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/r2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/r1">


                <TextView
                    android:id="@+id/notontime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chicago Suburb"
                    android:textSize="17dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/c2"
                    android:layout_marginLeft="20dp"/>

                <ImageView
                    android:id="@+id/c2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="#fcab53"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/r3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/r2">


                <TextView
                    android:id="@+id/notontime3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chicago Downtown"
                    android:textSize="17dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/c3"
                    android:layout_marginLeft="20dp"/>

                <ImageView
                    android:id="@+id/c3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="#ba77ff"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"/>

            </RelativeLayout>



            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#00ace3"
                android:layout_below="@+id/r3"
                android:text="See all"
                android:layout_marginTop="10dp"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#FFf"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>