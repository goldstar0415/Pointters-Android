<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1efef">

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFF">

        <ImageView
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Invite Friends"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/invite"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head">

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/tabs"
        android:background="#FFF"
        android:weightSum="2">

        <TextView
            android:id="@+id/order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Suggested"
            android:textColor="#000"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/customoffer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="QR Code"
            android:textColor="#000"
            android:gravity="center"
            android:layout_height="match_parent"/>


    </LinearLayout>
    <RelativeLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FFF"
        android:layout_below="@+id/tabs">
    <View
        android:id="@+id/view2"
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="58dp"
        android:background="@color/blue"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFF"
        android:layout_below="@+id/view">


        <TextView
            android:id="@+id/seach"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Search Here"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:background="#f1efef"
            android:layout_toLeftOf="@+id/seacdfrnd"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="#8e8e8e"/>

        <ImageView
            android:id="@+id/seacdfrnd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/searchfriend"/>

    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="7dp"
        android:layout_below="@+id/search"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="7dp"
        card_view:cardCornerRadius="3dp">
        <RelativeLayout
            android:id="@+id/intro1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF">

            <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/follow"/>

            <ImageView
                android:id="@+id/profile_pic1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/cartoon"/>

            <TextView
                android:id="@+id/profession1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile_pic1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Jack James"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FB friend"
                android:id="@+id/person_desp1"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/profession1"
                android:layout_toRightOf="@+id/profile_pic1"
                android:layout_marginLeft="10dp"/>
            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/profile_pic1"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:background="#f1efef"/>


            <ImageView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="1dp"
                android:layout_below="@+id/view3"
                android:background="@drawable/frined"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="7dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/card_view1"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="7dp"
        card_view:cardCornerRadius="3dp">
        <RelativeLayout
            android:id="@+id/intro2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF">

            <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/follow"/>

            <ImageView
                android:id="@+id/profile_pic2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/cartoon"/>

            <TextView
                android:id="@+id/profession2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile_pic2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Jack James"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suggested"
                android:id="@+id/person_desp2"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/profession2"
                android:layout_toRightOf="@+id/profile_pic2"
                android:layout_marginLeft="10dp"/>
            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/profile_pic2"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:background="#f1efef"/>


            <ImageView
                android:id="@+id/profile2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="1dp"
                android:layout_below="@+id/view4"
                android:background="@drawable/frined"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


        </RelativeLayout>


    </ScrollView>

</RelativeLayout>