<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#f1efef"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFF">
        <ImageView
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Buy"
            android:textColor="#000"
            android:layout_toLeftOf="@+id/view"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <View
            android:id="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <View
            android:id="@+id/view1"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/view"
            android:layout_marginLeft="5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/blue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Sell"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/view"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="35dp"
            android:background="@drawable/noti"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttns"
        android:layout_below="@+id/head">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/tabs"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/order"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="ORDERS"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/customoffer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="OFFERS"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/liveoffer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:gravity="center"
                    android:text="JOBS"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <View
                android:id="@+id/view2"
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:layout_below="@+id/tabs"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:background="@color/blue"/>


            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="7dp"
                android:layout_below="@+id/view2"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                card_view:cardCornerRadius="3dp">

                <RelativeLayout
                    android:id="@+id/profiles"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:background="#FFF">


                    <ImageView
                        android:id="@+id/profile_pic"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/cartoon" />

                    <TextView
                        android:id="@+id/person_desp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/person_servc"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/profile_pic"
                        android:text="Posted on 05-11-2017 05:20 pm" />

                    <TextView
                        android:id="@+id/editoffer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_pic"
                        android:layout_toLeftOf="@+id/detail"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Edit Offer"
                        android:textColor="@color/blue" />

                    <ImageView
                        android:id="@+id/timeofoffer"
                        android:layout_width="180dp"
                        android:layout_height="13dp"
                        android:layout_below="@+id/profile_pic"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/offertime" />

                    <TextView
                        android:id="@+id/person_servc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/profile_pic"
                        android:text="Dog Walker Service"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/noofoofers"
                        android:layout_width="180dp"
                        android:layout_height="13dp"
                        android:layout_below="@+id/timeofoffer"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/noofoffers" />

                    <ImageView
                        android:id="@+id/price"
                        android:layout_width="150dp"
                        android:layout_height="14dp"
                        android:layout_below="@+id/noofoofers"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/pricerange" />


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:text="Job Expires in 3 Days"
                        android:textColor="@color/blue"
                        android:textSize="16dp" />

                    <Button
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/viewjob" />

                    <ImageView
                        android:id="@+id/detail"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/profile_pic"
                        android:background="@drawable/details"/>



                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="7dp"
                android:layout_below="@+id/card_view"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                card_view:cardCornerRadius="3dp">

                <RelativeLayout
                    android:id="@+id/profiles1"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:background="#FFF">


                    <ImageView
                        android:id="@+id/profile_pic1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/cartoon" />

                    <TextView
                        android:id="@+id/person_desp1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/person_servc1"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/profile_pic1"
                        android:text="Posted on 05-11-2017 05:20 pm" />

                    <TextView
                        android:id="@+id/editoffer1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_pic1"
                        android:layout_toLeftOf="@+id/detail1"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Edit Offer"
                        android:textColor="@color/blue" />

                    <ImageView
                        android:id="@+id/timeofoffer1"
                        android:layout_width="180dp"
                        android:layout_height="13dp"
                        android:layout_below="@+id/profile_pic1"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/offertime" />

                    <TextView
                        android:id="@+id/person_servc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/profile_pic1"
                        android:text="Dog Walker Service"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/noofoofers1"
                        android:layout_width="180dp"
                        android:layout_height="13dp"
                        android:layout_below="@+id/timeofoffer1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:background="@drawable/noofoffers" />

                    <ImageView
                        android:id="@+id/price1"
                        android:layout_width="150dp"
                        android:layout_height="14dp"
                        android:layout_below="@+id/noofoofers1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/pricerange" />


                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:text="Job Expires in 3 Days"
                        android:textColor="@color/blue"
                        android:textSize="16dp" />

                    <Button
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/viewjob" />

                    <ImageView
                        android:id="@+id/detail1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_below="@+id/profile_pic1"
                        android:background="@drawable/details"/>



                </RelativeLayout>

            </android.support.v7.widget.CardView>







        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/buttns"
        android:layout_width="match_parent"
        android:background="@drawable/bottom"
        android:layout_alignParentBottom="true"
        android:layout_height="55dp" />


</RelativeLayout>




