<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >


    <RelativeLayout
        android:id="@+id/left_portion"
        android:layout_width="wrap_content"
        android:padding="@dimen/_15sdp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            fontPath="fonts/Montserrat-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General Notifications"
            android:textColor="@color/text_color_dark_gray"
            android:textSize="@dimen/text_size_small"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/subtitle"
            fontPath="fonts/Montserrat-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:text="General Notifications"
            android:textColor="#929296"
            android:textSize="@dimen/text_size_tiny"
            tools:ignore="MissingPrefix" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_5sdp">


        <RelativeLayout
            android:id="@+id/first_choice_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_20sdp">


            <ImageView
                android:id="@+id/img_push"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:src="@drawable/custom_checkbox" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/first_choice_rl">


            <ImageView
                android:id="@+id/img_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_15sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:src="@drawable/custom_checkbox" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>


