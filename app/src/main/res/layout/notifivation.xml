<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1efef">

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFF">

        <ImageView
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Notifications (6 New)"
            android:textStyle="bold"
            android:textSize="20dp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="7dp"
        card_view:cardCornerRadius="3dp">

        <RelativeLayout
            android:id="@+id/intro"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#FFF">

            <ImageView
                android:id="@+id/fav"
                android:layout_margin="10dp"
                android:background="@drawable/blue"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:layout_height="30dp" />



            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:background="@drawable/cartoon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/profession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile_pic"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Your Dog Service"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 like    20 comments    10 shares"
                android:id="@+id/person_desp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/profession"
                android:layout_toRightOf="@+id/profile_pic"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Reviews"
                android:id="@+id/person_review"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/person_desp"
                android:layout_toRightOf="@+id/profile_pic"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 mins ago"
                android:id="@+id/timereview"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/person_desp"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="7dp"
        android:layout_below="@+id/card_view"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="7dp"
        card_view:cardCornerRadius="3dp">
        <RelativeLayout
            android:id="@+id/intro1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#FFF">

            <ImageView
                android:id="@+id/green"
                android:layout_margin="10dp"
                android:background="@drawable/green"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:layout_height="30dp" />


            <ImageView
                android:id="@+id/profile_pic1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:background="@drawable/cartoon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/profession1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile_pic1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Micke Jane"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 mins ago"
                android:id="@+id/person_desp1"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/profession1"
                android:layout_toRightOf="@+id/profile_pic1"
                android:layout_marginLeft="10dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="7dp"
        android:layout_below="@+id/card_view1"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="7dp"
        card_view:cardCornerRadius="3dp">

        <RelativeLayout
            android:id="@+id/intro3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#FFF">


            <ImageView
                android:id="@+id/blue"
                android:layout_margin="10dp"
                android:background="@drawable/blue"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:layout_height="30dp" />


            <ImageView
                android:id="@+id/profile_pic3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:background="@drawable/cartoon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/profession3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile_pic3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Your Dog Service"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 like    20 comments    10 shares"
                android:id="@+id/person_desp3"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/profession3"
                android:layout_toRightOf="@+id/profile_pic3"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Reviews"
                android:id="@+id/person_review3"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/person_desp3"
                android:layout_toRightOf="@+id/profile_pic3"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 mins ago"
                android:id="@+id/timereview3"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/person_desp3"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Day ago"
        android:id="@+id/days"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/card_view2"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="7dp"
        android:layout_below="@+id/days"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="7dp"
        card_view:cardCornerRadius="3dp">
        <RelativeLayout
            android:id="@+id/intro4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#FFF">

            <ImageView
                android:id="@+id/pink"
                android:layout_margin="10dp"
                android:background="@drawable/pink"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:layout_height="30dp" />


            <ImageView
                android:id="@+id/profile_pic5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:background="@drawable/cartoon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/profession5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile_pic5"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Micke Jane"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 mins ago"
                android:id="@+id/person_desp5"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/profession5"
                android:layout_toRightOf="@+id/profile_pic5"
                android:layout_marginLeft="10dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="7dp"
        android:layout_below="@+id/card_view3"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="7dp"
        card_view:cardCornerRadius="3dp">
        <RelativeLayout
            android:id="@+id/intro6"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#FFF">


            <ImageView
                android:id="@+id/purple"
                android:layout_margin="10dp"
                android:background="@drawable/purple"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:layout_height="30dp" />


            <ImageView
                android:id="@+id/profile_pic6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="7dp"
                android:background="@drawable/cartoon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/profession6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile_pic6"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Micke Jane"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 mins ago"
                android:id="@+id/person_desp6"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/profession6"
                android:layout_toRightOf="@+id/profile_pic6"
                android:layout_marginLeft="10dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>