<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomCirclePageIndicator">
        <item name="fillColor">@color/colorAccent</item>
        <item name="strokeColor">@android:color/black</item>
        <item name="radius">@dimen/_4sdp</item>
        <item name="strokeWidth">@dimen/fix_1dp</item>
        <item name="pageColor">@android:color/white</item>
    </style>

</resources>
